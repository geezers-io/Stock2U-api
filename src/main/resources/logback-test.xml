<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <file>./logs/test.log</file>
        <encoder>
            <pattern>
                [%d{HH:mm:ss.SSS}] %cyan([%thread]) %highlight(%-5level) %green(%logger) %msg%n
            </pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
